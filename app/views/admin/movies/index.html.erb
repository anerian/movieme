<div id="block-tables" class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><a>All</a></li>
    </ul>
    <div class="clear">&nbsp;</div>
  </div>
  <div class="content">
    <h2 class="title">All movies</h2>
    <div class="inner">
      <div class="actions-bar">
        <div class="actions">
          <input type="submit" value="Merge" class="button"/>
        </div>
        <%= will_paginate @movies %>
        <div class="clear">&nbsp;</div>
      </div>
      <table class="table">
        <tbody>
          <tr>
            <th class="first">
              <input class="checkbox toggle" type="checkbox"/>
            </th>
            <th>ID</th>
            <th>Title</th>
            <th>Rating</th>
            <th>Yahoo ID</th>
            <th>Google ID</th>
            <th>IMDB ID</th>
            <th class="last">&nbsp;</th>
          </tr>
          <% @movies.each do |movie| %>
          <tr>
            <td class="first">
              <input class="checkbox toggle" type="checkbox"/>
            </td>
            <td><%= movie.id %></td>
            <td><%= movie.title %></td>
            <td><%= movie.rating %></td>
            <td><%= movie.yid %></td>
            <td><%= movie.gid %></td>
            <td><%= movie.imdbid %></td>
            <td class="last">
              <%= link_to 'Edit', edit_admin_movie_path(movie) %>&nbsp;|&nbsp;
              <%= link_to 'Delete', admin_movie_path(movie), :confirm => 'Are you sure you want to delete this movie?', :method => :delete %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="actions-bar">
        <div class="actions">
          <input type="submit" value="Merge" class="button"/>
        </div>
        <%= will_paginate @movies %>
        <div class="clear">&nbsp;</div>
      </div>
    </div>
  </div>
</div>
