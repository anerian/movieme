<div id="block-tables" class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><a>All</a></li>
    </ul>
    <div class="clear">&nbsp;</div>
  </div>
  <div class="content">
    <h2 class="title">All theaters</h2>
    <div class="inner">
      <div class="actions-bar">
        <div class="actions">
          <input type="submit" value="Merge" class="button"/>
        </div>
        <%= will_paginate @theaters %>
        <div class="clear">&nbsp;</div>
      </div>
      <table class="table">
        <tbody>
          <tr>
            <th class="first">
              <input class="checkbox toggle" type="checkbox"/>
            </th>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Yahoo ID</th>
            <th>Google ID</th>
            <th>IMDB ID</th>
            <th class="last">&nbsp;</th>
          </tr>
          <% @theaters.each do |theater| %>
          <tr>
            <td class="first">
              <input class="checkbox toggle" type="checkbox"/>
            </td>
            <td><%= theater.id %></td>
            <td><%= theater.name %></td>
            <td><%= theater.google_map_location %></td>
            <td><%= theater.yid %></td>
            <td><%= theater.gid %></td>
            <td><%= theater.imdbid %></td>
            <td class="last">
              <%= link_to 'Edit', edit_admin_theater_path(theater) %>&nbsp;|&nbsp;
              <%= link_to 'Delete', admin_theater_path(theater), :confirm => 'Are you sure you want to delete this theater?', :method => :delete %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="actions-bar">
        <div class="actions">
          <input type="submit" value="Merge" class="button"/>
        </div>
        <%= will_paginate @theaters %>
        <div class="clear">&nbsp;</div>
      </div>
    </div>
  </div>
</div>