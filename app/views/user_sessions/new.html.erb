<div id="box">


<div id="block-login" class="block"> 
  <h2>Login</h2>
  <div class="content login">
  <% form_for @user_session, :url => user_session_path, :html => {:class => 'form login'} do |f| %>
    <%= f.error_messages %>
    
    <div class="group">
      <div class="left">
        <%= f.label :email %>
      </div>
      <div class="right">
        <%= f.text_field :email %>
      </div>
      <div class="clear">&nbsp;</div>
    </div>
    
    <div class="group">
      <div class="left">
        <%= f.label :password %>
      </div>
      <div class="right">
        <%= f.password_field :password %>
      </div>
      <div class="clear">&nbsp;</div>
    </div>
    
    <div class="group">
      <div class="right">
        <%= f.check_box :remember_me %><%= f.label :remember_me %>
      </div>
      <div class="clear">&nbsp;</div>
    </div>
    
    <div class="group navform">
      <div class="right">
        <%= f.submit "Login" %>
      </div>
      <div class="clear">&nbsp;</div>
    </div>
  <% end %>
  </div>
</div>
</div>